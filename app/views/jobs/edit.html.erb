<h1> Make Updates to the Job Below: </h1>

<%= form_tag("/company/#{@job.company_id}/jobs/#{@job.id}", method: "patch") do %>
  <div>
    <%= label_tag(:job_title) %>
    <%= text_field_tag(:job_title, @job.job_title) %>
  </div>

  <div>
    <%= label_tag(:department_name) %>
    <%= text_field_tag(:department_name, @job.department_name) %>
  </div>

  <div>
    <%= label_tag(:hiring_manager) %>
    <%= text_field_tag(:hiring_manager, @job.hiring_manager) %>
  </div>

  <div>
    <%= label_tag(:salary) %>
    <%= text_field_tag(:salary, @job.salary) %>
  </div>

  <div>
    <%= label_tag(:description) %>
    <%= text_field_tag(:description, @job.description) %>
  </div>

  <div>
    <%= label_tag(:job_criteria_1) %>
    <%= text_field_tag(:job_criteria_1, @job.job_criteria_1) %>
  </div>

  <div>
    <%= label_tag(:job_criteria_2) %>
    <%= text_field_tag(:job_criteria_2, @job.job_criteria_2) %>
  </div>

  <div>
    <%= label_tag(:job_criteria_3) %>
    <%= text_field_tag(:job_criteria_3, @job.job_criteria_3) %>
  </div>

  <div>
    <%= label_tag(:job_criteria_4) %>
    <%= text_field_tag(:job_criteria_4, @job.job_criteria_4) %>
  </div>

  <div>
    <%= label_tag(:job_criteria_5) %>
    <%= text_field_tag(:job_criteria_5, @job.job_criteria_5) %>
  </div>

  <div>
    <div> <h5>Current Stage: <%= @job.stage %> </h5> <div> <%= select_tag :stage, options_for_select(['Prescreens', 'Phone Screens', 'Interivews', 'Reference Checks', 'Offers'], @job.stage), include_blank: true %></div> </div>
  </div>

  <div>
    <%= label_tag(:projected_start_date) %>
    <%= text_field_tag(:projected_start_date, @job.projected_start_date, placeholder:'YYYY-MM-DD')%>
  </div>

  <div>
    <div><h5>Timeline Status: <%= @job.timeline_status %> </h5> <div> <%= select_tag :timeline_status, options_for_select(['Prescreens', 'Phone Screens', 'Interivews', 'Reference Checks', 'Offers'], @job.timeline_status), include_blank: true %></div></div>
  </div>

  <div>
    <%= submit_tag("Save Job") %>
  </div>
<% end %>

<div>
  <p> <%= link_to "Back to Dashboard", "/company/#{@job.company_id}/jobs/dashboard" %></p>
</div>
